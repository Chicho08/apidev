paths:
  /posts:
    summary: posts level operation
    description: creat new post, fetch all post
    get:
      summary: fetch all posts
      description: returns all posts from server
      operationId: fetchPosts
      responses:
        default:
          description: Default error sample response
          content:
            application/json:
              examples:
                response example:
                  value: |-
                    [
                      {
                        "id": 1,
                        "title": "Post 1"
                      },
                      {
                        "id": 2,
                        "title": "Post 2"
                      },
                      {
                        "id": 3,
                        "title": "Post 3"
                      }
                    ]
      tags:
        - posts
  /comments:
    summary: comments level operation
    description: create new comments, fetch comments
    get:
      summary: fetch all comments
      description: returns all comments
      operationId: fetchComments
      responses:
        default:
          description: Default error sample response
          content:
            application/json:
              examples:
                return comments example:
                  value: |-
                    [
                      {
                        "id": 1,
                        "body": "some comment",
                        "postId": 1
                      },
                      {
                        "id": 2,
                        "body": "some comment",
                        "postId": 1
                      },
                      {
                        "id": 3,
                        "body": "some comment",
                        "postId": 2
                      },
                      {
                        "id": 4,
                        "body": "some comment",
                        "postId": 3
                      }
                    ]
      tags:
        - comments
